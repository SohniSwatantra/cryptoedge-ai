PORT=3000
JWT_SECRET=change-this-to-a-long-random-string
DB_PATH=./data/cryptoedge.db

# Kraken Public API
KRAKEN_API_URL=https://api.kraken.com

# Kraken Private API (optional - for live trading)
KRAKEN_API_KEY=your-kraken-api-key
KRAKEN_API_SECRET=your-kraken-api-secret
LIVE_TRADING_ENABLED=false

# Signal generation interval in ms (default: 300s / 5 min)
SIGNAL_INTERVAL=300000

# Kimi LLM API (for AI-powered signal analysis)
# Get your API key at: https://platform.moonshot.ai/ -> Console -> API Keys
KIMI_API_KEY=your-kimi-api-key
KIMI_API_URL=https://api.moonshot.ai/v1/chat/completions
KIMI_MODEL_ID=kimi-k2.5
LLM_SIGNAL_ENABLED=true
